<p id="notice"><%= notice %></p>

<h1>Teams</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Team name</th>
      <th>Contents of store</th>
      <th>Advisor</th>
      <th>Number of people</th>
      <th>Is commercial purpose</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @teams.each do |team| %>
      <tr>
        <td><%= team.user %></td>
        <td><%= team.team_name %></td>
        <td><%= team.contents_of_store %></td>
        <td><%= team.advisor %></td>
        <td><%= team.number_of_people %></td>
        <td><%= team.is_commercial_purpose %></td>
        <td><%= link_to 'Show', team %></td>
        <td><%= link_to 'Edit', edit_team_path(team) %></td>
        <td><%= link_to 'Destroy', team, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

