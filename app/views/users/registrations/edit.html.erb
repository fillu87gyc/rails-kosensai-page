<div class="container-fluid">
  <div class="row">
    <div class="offset-sm-2 col-sm-8">
      <div class="card" id="wrapper">
        <div class="card-header">
          <h4>
            ユーザー情報編集
          </h4>
        </div>
        <div class="card-body">
          <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {method: :put}) do |f| %>
            <%= render "devise/shared/error_messages", resource: resource %>
            <div class="row">
              <div class="form-group col-md-3">
                <%= f.label 'クラス' %><br/>
                <%= f.text_field :class_name, autofocus: true, :class => "form-control", :placeholder => '例)IS2 1-2 専攻科2...' %>
              </div>

              <div class="form-group col-md-9">
                <%= f.label :name %><br/>
                <%= f.text_field :name, :class => "form-control" %>
              </div>
            </div>
            <div class="form-group">
              <%= f.label :tel, "電話番号" %><br/>
              <%= f.text_field :tel, :class => "form-control" %>
            </div>

            <div class="form-group">
              <%= f.label :email %><br/>
              <%= f.email_field :email, autofocus: true, autocomplete: "email", :class => "form-control" %>
            </div>

            <div class="pass-field">
              <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
                <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
              <% end %>

              <div class="field">
                <%= f.label :password, "新しいpassword" %> <i>(パスワードを変更しない場合は入力しない)</i><br/>
                <%= f.password_field :password, autocomplete: "new-password" %>
                <% if @minimum_password_length %>
                  <br/>
                <% end %>
              </div>

              <div class="field">
                <%= f.label :password_confirmation, "もう一度入力" %><br/>
                <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
              </div>
            </div>
            <div>
              <div class="field">
                <%= f.label :current_password %> <i>(情報を更新するために現在のパスワードを入力してください)</i><br/>
                <%= f.password_field :current_password, autocomplete: "current-password" %>
              </div>
            </div>
            <div class="row">
              <div class="mx-auto">
                <%= f.submit "Update", :class => "btn btn-primary" %>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
