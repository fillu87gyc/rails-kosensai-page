                      <li><a href="/teams/<%= current_user.team.id %> ">団体詳細画面</a></li>
                    <% else %>
                      <li><a href="/teams/new">団体登録</a></li>
                    <% end %>
                    <hr style="background-color: #f0f0f0;margin: 0px;border: 0;border-top: 1.5px solid rgba(0, 0, 0, 0.1);">
                    <li><%= link_to 'LOGOUT', destroy_user_session_path, method: :delete %></li>
                  <% end %>
                </ul>
                </li>
          </ul>
